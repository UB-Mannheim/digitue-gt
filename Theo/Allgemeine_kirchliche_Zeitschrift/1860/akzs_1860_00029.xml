      <TextLine id="eSc_line_9b5e9335" >
        <Coords points="34,193 30,152 1386,141 1394,187 1392,202 34,213"/>
        <Baseline points="34,193 1394,187"/>
        <TextEquiv>
          <Unicode>mittleriſche Kirche die Heilsgnade empfangen kann, und manchem Laien iſt es</Unicode>
        </TextEquiv>
      </TextLine>
      <TextLine id="eSc_line_e22f87f0" >
        <Coords points="34,245 30,208 91,195 91,195 93,195 1392,197 1396,239 1394,263 34,267"/>
        <Baseline points="34,245 1396,239"/>
        <TextEquiv>
          <Unicode>auch gar nicht unbequem, daß die Kirche nicht nur Alles für ihn thut, ſondern</Unicode>
        </TextEquiv>
      </TextLine>
      <TextLine id="eSc_line_4977d019" >
        <Coords points="34,300 34,256 369,261 372,304 367,319 30,313"/>
        <Baseline points="34,300 372,304"/>
