        <Coords points="45,2064 41,2014 1405,2011 1412,2053 1409,2074 45,2079"/>
        <Baseline points="45,2064 1412,2053"/>
        <TextEquiv>
          <Unicode>am wenigſten Anregung ſeit Jahren oder Jahrhunderten empfangen haben.</Unicode>
        </TextEquiv>
      </TextLine>
      <TextLine id="eSc_line_9816c4ed" >
        <Coords points="47,2116 45,2070 1033,2070 1055,2059 1057,2059 1057,2059 1057,2059 1059,2059 1059,2059 1059,2059 1061,2059 1061,2059 1064,2059 1066,2059 1103,2068 1405,2057 1412,2107 1409,2124 47,2131"/>
        <Baseline points="47,2116 1412,2107"/>
