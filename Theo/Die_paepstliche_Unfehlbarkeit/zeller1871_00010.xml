      <TextLine id="eSc_line_6de14eb9" >
        <Coords points="142,494 142,450 1372,454 1374,498 1370,514 138,512"/>
        <Baseline points="142,494 1374,498"/>
        <TextEquiv>
          <Unicode>Es iſt aber nicht blos die perſönliche Stellung des Papſtes und die</Unicode>
