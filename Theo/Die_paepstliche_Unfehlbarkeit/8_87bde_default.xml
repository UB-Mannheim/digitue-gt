      <TextLine id="eSc_line_72e3af20" >
        <Coords points="52,349 48,298 1367,294 1373,345 1371,359 52,363"/>
        <Baseline points="52,349 1373,345"/>
        <TextEquiv>
          <Unicode>begründet nicht ſchon der Umſtand den allergrößten Unterſchied zwiſchen</Unicode>
