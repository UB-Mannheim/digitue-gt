      <TextLine id="eSc_line_472f9996" >
        <Coords points="52,686 48,636 1365,632 1371,676 1369,698 52,698"/>
        <Baseline points="52,686 1371,676"/>
        <TextEquiv>
          <Unicode>ſprechen: wenn ihre Organe in der Ausführung ihrer Befehle die Staats⸗</Unicode>
