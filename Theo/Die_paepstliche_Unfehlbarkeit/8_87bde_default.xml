      <TextLine id="eSc_line_266299d5" >
        <Coords points="50,1135 46,1086 1365,1080 1371,1129 1369,1139 50,1145"/>
        <Baseline points="50,1135 1371,1129"/>
        <TextEquiv>
          <Unicode>Jahren der Kirchenſtaat das Aſyl, Rom ſelbſt das Hauptquartier der</Unicode>
