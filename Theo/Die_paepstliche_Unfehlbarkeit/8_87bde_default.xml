      <TextLine id="eSc_line_4e3438fa" >
        <Coords points="50,626 48,577 1367,577 1371,622 1369,636 50,640"/>
        <Baseline points="50,626 1371,622"/>
        <TextEquiv>
          <Unicode>kommene Freiheit der Bewegung auf ihrem Gebiete noch ſo feierlich ver⸗</Unicode>
