      <TextLine id="eSc_line_b1135e1c" >
        <Coords points="52,460 52,406 1373,412 1373,460 1373,472 52,474"/>
        <Baseline points="52,460 1373,460"/>
        <TextEquiv>
          <Unicode>Erhaltung ihres Einfluſſes und zur Ausführung ihrer Beſchlüſſe bedarf,</Unicode>
