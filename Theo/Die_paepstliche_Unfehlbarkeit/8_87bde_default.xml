      <TextLine id="eSc_line_459d61b0" >
        <Coords points="54,238 50,193 1367,189 1373,234 1371,248 54,254"/>
        <Baseline points="54,238 1373,234"/>
        <TextEquiv>
          <Unicode>ſie abgeſchickt und für ſie ausgewählt waren? Und wenn alle dieſe Fragen</Unicode>
